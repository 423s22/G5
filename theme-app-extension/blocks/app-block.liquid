<image-gallery data-id="{{ block.id }}">
<p>--------------------------Extension Boundarys Nate was here--------------------------</p>
  {%- if block.settings.heading -%}
    <h2>{{ product.price | money }}</h2>
  {%- endif -%}

  {%- if block.settings.description -%}
      <p>{{block.settings.description}}</p>
  {%- endif -%}

  <select>
  {% for product in collections.frontpage.products %}
  <option>{{ product.title }} {{product.price | money}}</option>
  {% endfor %}
  </select>
    
    {% for option in product.options %}
    <p>{{ option }}<p>
    <label>
    <select>
      {% for variant in product.variants %}
        <option>{{ variant.title }} - {{ variant.price | money }}</option>
      {% endfor %}
    </select>
    </label>
    {% endfor %}
    
  

<p>--------------------------Extension Boundary--------------------------</p>

</image-gallery>

{% schema %}
  {
    "name": "Image Gallery",
    "target": "section",
    "stylesheet": "image-gallery.css",
    "javascript": "image-gallery.js",
    "templates": ["product", "index"],
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "PRODUCT_PRICE"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "This will display product options"
      }
    ]
  }
{% endschema %}
