<image-gallery data-id="{{ block.id }}">
<p>--------------------------Extension Boundary--------------------------</p>
  {%- if block.settings.heading -%}
    <h2>{{ product.price | money }}</h2>
  {%- endif -%}

  {%- if block.settings.description -%}
    <p>The price will be displayed above, the options below. Eventually the price will change based on selected options</p>
    {% for option in product.options %}
    <p>{{ option }}<p>
    <label>
      <select>
      {% for variant in product.variants %}
        <option>{{ variant.title }} - {{ variant.price | money }}</option>
      {% endfor %}
    </select>
    </label>
    {% endfor %}
    
  {%- endif -%}


  <image-popup init>
    <template image-popup>
      <button close-button class="close-button">
        {%- render 'icon-close' -%}
      </button>
    </template>
  </image-popup>

<p>--------------------------Extension Boundary--------------------------</p>

</image-gallery>

{% schema %}
  {
    "name": "Image Gallery",
    "target": "section",
    "stylesheet": "image-gallery.css",
    "javascript": "image-gallery.js",
    "templates": ["product", "index"],
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "PRODUCT_PRICE"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "This will display product options"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
      },
      {
        "type": "image_picker",
        "id": "image_3",
        "label": "Image 3"
      },
      {
        "type": "image_picker",
        "id": "image_4",
        "label": "Image 4"
      }
    ]
  }
{% endschema %}
